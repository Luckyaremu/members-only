
<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <% if user_signed_in? %>
      <th>Username</th>
    <% end %>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if user_signed_in? %>
        <td><%= post.user.username %></td>
      <% end %>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

